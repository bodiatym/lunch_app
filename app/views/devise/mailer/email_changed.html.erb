<p> <%= t('welcome ')%><%= @email %>!</p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%=t('devise.confirmations.email.unconfirmed_change_notification') %>  <%= @resource.unconfirmed_email %>.</p>
<% else %>
  <p> <%= t('devise.confirmations.email.confirmed_change_notification')%><%=@resource.email %>.</p>
<% end %>
