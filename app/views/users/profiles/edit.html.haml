%h1= t('.edit_profile', name: @facade.user_name)
= form_with(model: @profile) do |f|
  .field
    =f.hidden_field :id, value: @facade.id
  .field
    = f.label :surname
    %br/
    = f.text_field :surname, autofocus: true
  .field
    = f.label :address
    %br/
    = f.text_field :address, autofocus: true
  .field
    = f.label :phone
    %br/
    = f.text_field :phone, autofocus: true

    %br
    = f.submit t('save')
